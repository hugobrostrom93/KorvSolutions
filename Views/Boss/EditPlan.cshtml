@model KorvSolutions.Models.Plan

<h2>Edit Plan</h2>

<form method="post" asp-action="EditPlan" asp-controller="Boss" class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" required>
            </div>

            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th></th> <!-- Column for delete button -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var planProduct in Model.PlanProducts)
                        {
                            <tr>
                                <td>@planProduct.Product.Name</td>
                                <td><input type="number" name="quantities[@planProduct.Product.Id]" value="@planProduct.Quantity" min="0" class="form-control"></td>
                                <td>
                                    <button type="submit" formaction="/Boss/DeleteProduct/@planProduct.Product.Id" class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Add other fields here for editing other properties of the plan -->

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="ViewPlan" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>


