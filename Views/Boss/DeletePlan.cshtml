@model KorvSolutions.Models.Plan

<h2>Delete Plan</h2>

<div>
    <h4>Plan @Model.Id</h4>
    <p>Date: @Model.Date</p>
    <p>Are you sure you want to delete this plan?</p>
    <form asp-controller="Boss" asp-action="DeletePlanConfirmed" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="ViewPlan" class="btn btn-secondary">Cancel</a>
    </form>

</div>
